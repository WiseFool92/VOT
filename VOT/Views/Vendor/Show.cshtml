@{
  Layout = "_Layout";
}
@using VOT.Models;

<div class="center">
  <h3>Vendor orders list:</h3>

  <ol>
    @foreach (var order in @Model["order"])
    {
    <li>
      <a href='/vendor/@Model["vendor"].Id/order/@order.Id'>@order.Description</a>
    </li>   
    }
  </ol>

  <p>
    <a href='/vendor/@Model["vendor"].Id/order/new'>Create & Add an order to a vendor</a>
  </p>
</div>